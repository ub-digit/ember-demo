<h1>{{model.title}}</h1>
<p class="lead">{{model.summary}}</p>
<p>
  {{markdown-text model.body}}
</p>
{{#if model.url}}
<p>
  <a {{bind-attr href=model.url}}>Link</a>
</p>
{{/if}}
{{#link-to 'backender.edit' id classBinding=":btn :btn-primary"}}Edit{{/link-to}}
<button class="btn btn-primary" {{action "removeItem" model}}>Delete</button>

