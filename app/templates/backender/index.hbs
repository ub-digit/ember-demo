<table class="table">
  <thead>
    <tr>
      <th>{{t "backend.item.title"}}</th>
      <th>{{t "backend.item.summary"}}</th>
      <th>{{t "backend.item.link"}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each item in model}}
      <tr>
        <td>{{#link-to 'backender.show' item.id}}{{item.title}}{{/link-to}}</td>
        <td>{{item.summary}}</td>
        <td>{{item.url}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>