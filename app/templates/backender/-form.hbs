{{#if error}}
  <div class="alert alert-danger">
    Unable to save
  </div>
{{/if}}
<div class="form-group">
  <label>{{t "backend.item.title"}}</label>
  {{input type="text" classBinding=":form-control" value=model.title}}
</div>
<div class="form-group">
  <label>{{t "backend.item.summary"}}</label>
  {{input type="text" classBinding=":form-control" value=model.summary}}
</div>
<div class="form-group">
  <label>{{t "backend.form.body"}}</label>
  {{textarea classBinding=":form-control" cols="60" rows="10" value=model.body}}
</div>
<div class="form-group">
  <label>{{t "backend.item.link"}}</label>
  {{input type="text" classBinding=":form-control" value=model.url}}
</div>
<div class="form-group">
  <button class="btn btn-primary" {{action 'saveItem' model}}>{{t "backend.form.save"}}</button>
</div>
